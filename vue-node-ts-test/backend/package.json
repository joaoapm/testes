{
  "name": "node-typescript",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch \"src/\" --exec \"ts-node src/entry.ts\" -e ts",
    "test": "jest --no-cache",
    "build": "tsc",
    "prod": "npm run build && node dist/entry.js"
  },
  "dependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.17",
    "@types/supertest": "^2.0.8",
    "express": "^4.17.1",
    "jest": "^24.8.0",
    "nodemon": "^1.18.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
